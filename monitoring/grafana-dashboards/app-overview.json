{
  "uid": "app-overview",
  "title": "Featherweight App Overview",
  "version": 1,
  "tags": ["featherweight", "overview"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests Rate & Error Rate",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m]))",
          "legendFormat": "All HTTP Requests",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_requests_total{status=~'5..'}[1m]))",
          "legendFormat": "Error (5xx) Rate",
          "refId": "B"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (MB)",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 8 },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": { "unit": "megabytes" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "process_resident_memory_bytes/1024/1024",
          "legendFormat": "Memory MB",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" }
      }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (seconds per sec)",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 8 },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": { "unit": "none" },
        "overrides": []
      },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[1m])",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "refresh": 1
      }
    ]
  }
}